<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="braincrush.mirza.com.braincrush">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_brain"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_brain"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".activities.SplashScreenActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.SinglePlayerActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".activities.LevelOneActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity android:name=".activities.Levels.LevelOneActivity" />
        <activity android:name=".activities.Levels.LevelTwoActivity" />
        <activity android:name=".activities.Levels.LevelThreeActivity" />
        <activity android:name=".activities.Levels.LevelFourActivity"></activity>
    </application>

</manifest>